    <main>
        <div align="center">
            <h2>Horários Disponíveis </h2>
            <p>Selecione a data que deseja visualizar clicando abaixo.</p>
            <input type="date" id="date" name="in_date" value="@data" />
            <table border="1">
                <caption>Dia 25/07</caption>
                <tr>
                    <th>Horário</th>
                    <th>Disponibilidade</th>
                    <th>Reservado por:</th>
                </tr>
                @{ for(int i = 0; i < horarios.Count; i ++)
                    {
                        string hora = horarios[i];
                        string livre = disponibilidade[i];
                        string responsavel = pessoa[i];

                            <tr>
                                <td>@hora</td>
                                <td>@livre</td>
                                <td>@responsavel</td>
                            </tr>
                       
                    } 
                    }
                
        </table>
</div>
</main>

    
